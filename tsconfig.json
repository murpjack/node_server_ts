{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "esModuleInterop": true,
        "target": "es6",
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "server/dist",
        "baseUrl": "."
    },
    "include": [
        "server/src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
    ]
}
