{
  "name": "node_server_ts",
  "version": "1.0.0",
  "description": "Basic TDD Node server using TypeScript",
  "main": "server/dist/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build": "tsc",
    "build:watch": "onchange \"server/src/**/*.ts\" -- npm run build",
    "start": "nodemon ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/murpjack/node_server_ts.git"
  },
  "keywords": [
    "TypeScript",
    "Node",
    "TDD",
    "Api"
  ],
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "Jack Murphy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/murpjack/node_server_ts/issues"
  },
  "homepage": "https://github.com/murpjack/node_server_ts#readme",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.12",
    "@types/node": "^14.6.2",
    "@types/source-map-support": "^0.5.3",
    "jest": "^25.2.2",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fluture": "^13.0.1",
    "node": "^14.8.0",
    "nodemon": "^2.0.4"
  }
}
